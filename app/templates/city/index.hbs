{{#link-to "homepage"}}
  Back to Home
{{/link-to}}

{{#if model.cities.length}}
  {{#list-of-cities model.cities}}
  {{/list-of-cities}}
{{else}}
  <div style="wrapper">
    <button type="button" {{action "preloadDefaultCities"}}>Preload default Cities</button>
  </div>
{{/if}}

<form class="form-add-city" {{action "addNewCity" on="submit"}}>
  <div>
    <label for="name" class="control-label">New City:</label>
    {{input id="name" type="text" value=model.newCity.name required=true}}
    <button type="submit">Add</button>
  </div>
</form>
